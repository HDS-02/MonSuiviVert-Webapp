  app.post("/api/plants/:id/toggle-auto-watering", isAuthenticated, async (req: Request, res: Response) => {
    try {
      const plantId = parseInt(req.params.id);
      if (isNaN(plantId)) {
        return res.status(400).json({ message: "ID de plante invalide" });
      }
      
      // R√©cup√©rer les donn√©es de la requ√™te
      const { enabled } = req.body;
      console.log(`Demande de modification de l'arrosage automatique pour la plante ${plantId}: ${enabled ? 'Activation' : 'D√©sactivation'}`);
      
      // R√©cup√©rer les informations de la plante
      const plant = await storage.getPlant(plantId);
      if (!plant) {
        return res.status(404).json({ message: "Plante non trouv√©e" });
      }
      
      // Mettre √† jour le statut d'arrosage automatique
      const updatedPlant = await storage.updatePlant(plantId, { autoWatering: enabled });
      
      // Si on active l'arrosage automatique, g√©n√©rer les t√¢ches
      if (enabled) {
        // V√©rifier si la plante a une fr√©quence d'arrosage d√©finie
        if (!plant.wateringFrequency || plant.wateringFrequency <= 0) {
          return res.status(400).json({ 
            message: "Impossible d'activer l'arrosage automatique: fr√©quence d'arrosage non d√©finie" 
          });
        }
        
        console.log(`G√©n√©ration de t√¢ches d'arrosage automatique pour la plante ${plant.name} (ID: ${plant.id})`);
        
        // Date de r√©f√©rence : aujourd'hui + 30 jours (on veut toujours avoir un mois d'avance)
        const baseDate = new Date();
        const referenceDate = new Date();
        referenceDate.setDate(referenceDate.getDate() + 30);
        
        // R√©cup√©rer les t√¢ches d'arrosage existantes pour cette plante
        const existingTasks = await storage.getTasksByPlantId(plantId);
        const wateringTasks = existingTasks.filter(task => 
          task.type === 'water' && !task.completed && new Date(task.dueDate) > new Date()
        );
        
        // Trouver la derni√®re date d'arrosage programm√©e
        let lastWateringDate = new Date();
        if (wateringTasks.length > 0) {
          // Trier les t√¢ches par date d√©croissante pour trouver la plus √©loign√©e
          const sortedTasks = wateringTasks.sort((a, b) => {
            if (!a.dueDate || !b.dueDate) return 0;
            return new Date(b.dueDate).getTime() - new Date(a.dueDate).getTime();
          });
          
          if (sortedTasks[0].dueDate) {
            lastWateringDate = new Date(sortedTasks[0].dueDate);
          }
        }
        
        // Calculer le nombre de t√¢ches √† cr√©er pour couvrir la p√©riode jusqu'√† la date de r√©f√©rence
        const daysToReference = Math.ceil((referenceDate.getTime() - lastWateringDate.getTime()) / (1000 * 3600 * 24));
        const numberOfTasksToCreate = Math.max(1, Math.ceil(daysToReference / plant.wateringFrequency));
        
        console.log(`Cr√©ation de ${numberOfTasksToCreate} nouvelles t√¢ches d'arrosage automatique`);
        
        // Tableau pour stocker les dates d'arrosage (pour l'email)
        const wateringDates: Date[] = [];
        const tasksCreated = [];
        
        // Cr√©er les t√¢ches n√©cessaires
        for (let i = 1; i <= numberOfTasksToCreate; i++) {
          // Ajouter une v√©rification suppl√©mentaire
          if (!plant.wateringFrequency) continue;
          
          const nextDate = new Date(lastWateringDate);
          nextDate.setDate(nextDate.getDate() + (plant.wateringFrequency * i));
          wateringDates.push(nextDate);
          
          const futureTask = {
            plantId: plantId,
            type: 'water',
            description: `Arrosage automatique de ${plant.name}`,
            dueDate: nextDate,
            completed: false
          };
          
          const task = await storage.createTask(futureTask);
          tasksCreated.push(task);
          console.log(`‚úÖ Arrosage programm√© pour ${plant.name} le ${nextDate.toLocaleDateString('fr-FR')}`);
        }
        
        // Envoyer un email de notification avec les dates d'arrosage programm√©es
        if (req.user?.email) {
          try {
            await sendScheduledWateringNotification(req.user.email, plant, wateringDates);
