            console.error("Erreur lors de l'envoi de l'email de notification d'arrosages programm√©s:", emailError);
          }
        }
        
        return res.status(200).json({
          message: "Arrosage automatique activ√© et t√¢ches g√©n√©r√©es avec succ√®s",
          plant: updatedPlant,
          tasksCreated: tasksCreated.length,
          nextWateringDates: wateringDates.map(date => date.toISOString())
        });
      } else {
        // Si d√©sactivation, juste confirmer la mise √† jour
        return res.status(200).json({
          message: "Arrosage automatique d√©sactiv√© avec succ√®s",
          plant: updatedPlant
        });
      }
    } catch (error: any) {
